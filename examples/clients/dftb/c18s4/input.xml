<simulation verbosity='high'>
  <total_steps> 10000 </total_steps>
  <ffsocket mode='unix' name='dftbuff'>
    <address> c18s4 </address>
    <slots> 20 </slots>
    <timeout> 5 </timeout>
  </ffsocket>
