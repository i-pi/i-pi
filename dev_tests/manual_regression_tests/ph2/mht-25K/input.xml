<!-- REGTEST
DEPENDENCIES  init.xyz
COMMAND(4)    i-pi-driver -u -h mht-25K -m sg -o 30.0
ENDREGTEST -->
<simulation verbosity='high'>
  <output prefix='simulation'>
    <properties filename='out'>
         [ step, time{picosecond}, conserved{kelvin}, temperature{kelvin}, kinetic_cv{kelvin}, potential{kelvin}, pressure_cv{megapascal}, volume]
      </properties>
    <trajectory format='xyz' filename='pos' stride='100' cell_units='angstrom'>positions{angstrom}</trajectory>
  </output>
  <total_steps>25</total_steps>
  <prng>
    <seed>31415</seed>
  </prng>
  <ffsocket name='sgdriver' mode='unix'>
    <address> mht-25K </address>
  </ffsocket>
  <system>
    <initialize nbeads='16'>
      <file mode='xyz'> init.xyz </file>
      <velocities mode='thermal' units='kelvin'> 50 </velocities>
    </initialize>
    <forces>
      <force forcefield='sgdriver'> </force>
    </forces>
    <motion mode='dynamics'>
      <dynamics mode='npt'>
        <barostat mode='isotropic'>
          <tau units='femtosecond'> 100 </tau>
          <thermostat mode='langevin'>
            <tau units='femtosecond'> 100 </tau>
          </thermostat>
        </barostat>
        <thermostat mode='pile_g'>
          <tau units='femtosecond'> 10 </tau>
        </thermostat>
        <timestep units='femtosecond'>1</timestep>
      </dynamics>
    </motion>
    <ensemble>
      <temperature units='kelvin'> 25 </temperature>
      <pressure>0</pressure>
    </ensemble>
  </system>
</simulation>
